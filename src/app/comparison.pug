.svg-icons
  ng-include(src="'images/svg-defs.svg'")
.screen.canvas
  .screen__row
    ng-include(src="'app/partials/app-header.html'")
  .screen__row
    ng-include(src="'app/partials/canvas-header.html'")
  .screen__row.-rest
    .row.expanded.collapse
      .columns.large-2.left-sidebar(ng-hide='leftSideBarIsHidden')
        aside.sidebar
          .sidebar__head
            .sidebar__title Screens
            button.sidebar__collapse-button.-left(ng-click='leftSideBarIsHidden = !leftSideBarIsHidden')
              i.sidebar__collapse-arrow.ion-arrow-left-b
              i.sidebar__collapse-menu.ion-android-menu
          .sidebar__body
            .scroller
              ul.items-spaced
                li(ng-repeat='version in versionsVm.project.versions')
                  a(ng-click='versionsVm.project.selectVersion(version)')
                    img.thumbnail(ng-class="{'is-active': version.objectID === versionsVm.selectedVersion.obj.objectID}", ng-src='{{::(version.imageBase64 || version.imagePath)}}')
                    span.u-text-small(ng-bind='::version.name')
      .sidebar__fixed-container(ng-show='leftSideBarIsHidden')
        aside.sidebar.-closed
          .sidebar__head
            ul.sidebar__menu.menu
              li
                a
            button.sidebar__collapse-button.-right(ng-click='leftSideBarIsHidden = !leftSideBarIsHidden')
              i.sidebar__collapse-arrow.ion-arrow-left-b
              i.sidebar__collapse-menu.ion-android-menu
          .sidebar__body
      .columns.main-content.notes-modal__container(ng-class="{'large-8': !leftSideBarIsHidden && !rightSideBarIsHidden,\
      'large-10': leftSideBarIsHidden || rightSideBarIsHidden,\
      'large-12': leftSideBarIsHidden && rightSideBarIsHidden,\
      'canvas--padded-left': leftSideBarIsHidden,\
      'canvas--padded-right': rightSideBarIsHidden}")
        .nav-widget.nav-widget--prev
          a(href='#')
            svg
              use(xlink:href='#shape-prev')
        .zoom-widget
          button.zoom-in(ng-disabled='versionsVm.project.configs.zoom <= .25', ng-click='versionsVm.selectedVersion.zoomIn()')
          label.zoom-text(style='margin: 0 5px;')
            | {{versionsVm.project.configs.zoom * 100}}%
          button.zoom-out(ng-click='versionsVm.selectedVersion.zoomOut()', ng-disabled='versionsVm.project.configs.zoom >= 2')
        .nav-widget.nav-widget--next
          a(href='#')
            svg
              use(xlink:href='#shape-next')
        section.canvas-screen-viewer.scroller
          .canvas-screen-viewer-inner(ng-style='versionsVm.selectedVersion.screenParentStyle()')
            #screen.canvas-screen(ng-style='versionsVm.selectedVersion.screenStyle()')
      .columns.large-2.right-sidebar(ng-hide='rightSideBarIsHidden')
        aside.sidebar
          .sidebar__head
            .sidebar__title
              | Details
            button.sidebar__collapse-button.-right(ng-click='rightSideBarIsHidden = !rightSideBarIsHidden')
              i.sidebar__collapse-arrow.ion-arrow-left-b
              i.sidebar__collapse-menu.ion-android-menu
          .sidebar__body
            .scroller
              ul.items-spaced
                li.text-cener(ng-if='!versionsVm.selectedVersion.obj.notes.length') No notes in this screen
                li.o-list--stripped(ng-repeat='note in versionsVm.selectedVersion.obj.notes', ng-click='versionsVm.selectedVersion.openNote(note, $index + 1)', ng-class="{'selected' : note.show === true}")
                  | note {{$index + 1}}
      .sidebar__fixed-container(ng-show='rightSideBarIsHidden')
        aside.sidebar.-closed.-closed-right
          .sidebar__head
            ul.sidebar__menu.menu
              li
                a
            button.sidebar__collapse-button.-left(ng-click='rightSideBarIsHidden = !rightSideBarIsHidden')
              i.sidebar__collapse-arrow.ion-arrow-left-b
              i.sidebar__collapse-menu.ion-android-menu
          .sidebar__body
